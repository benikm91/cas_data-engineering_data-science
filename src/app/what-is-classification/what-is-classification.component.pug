ng-template('#slides'='')
    section
        slide-with-header(header="{{problemTableOfContentLabel.CLASSIFICATION.label}}")
            div
                p.fragment.fade-up Der Output besteht aus einer Menge von #[span.highlight Klassen].
                ul
                    li.fragment.fade-up Identifikation von Spam-Emails
                    li.fragment.fade-up Objekterkennung in Bilder
                .fragment
                    .mt-5.d-flex.justify-content-center
                        model-visualization("#spamModel"='', [with-trigger]="false")
                            div(input, class="input").transparent-border-1.code
                                p Guten Tag Herr Meyer...
                            div(model, class="model").model-box Modell
                            div(output, class="output").fix-height.transparent-border-1.code
                                p Not Spam
                    .mt-5.d-flex.justify-content-center
                        model-visualization("#nonSpamModel"='', [with-trigger]="false")
                            div(input, class="input").transparent-border-1.code
                                p GLÃœCKWUNSCH HERR INFO...
                            div(model, class="model").model-box Modell
                            div(output, class="output").fix-height.transparent-border-1.code
                                p Spam
                span.fragment(fragment-trigger, "(trigger)"="spamModel.start(); nonSpamModel.start()", "(untrigger)"="spamModel.end(); nonSpamModel.end()")
    section
        slide-with-header(header="Classification - Beispiel - Name der Blumenart")
            ul
                li Input(s): #[span.code-font length (cm), width (cm)]
                li Output: #[span.code-font "Setosa" oder "Other" ]
            div.fragment.fade-up.pt-5.d-flex.justify-content-center
                model-visualization("#classificationExample"='', output-header="Output Space")
                    div(inputHeader)
                        div(style={marginTop: "-50px"})
                            h5(style={marginBottom: "0"}) Input Space
                            h6(margin="0") 2 Features
                    div(input, class="input").transparent-border-1.code
                        div length: 1.5cm
                        div width: 0.25cm
                    div(model, class="model").model-box.code
                        div Modell
                    div(output, class="output").fix-height.code
                        | #[span.highlight-seaborn-1 Setosa]
                span.fragment(fragment-trigger, "(trigger)"="classificationExample.end();")
            div.mt-5.r-stack
                img.fragment(src="assets/images/classification/example-data-only.png", style={height: "200px"}).img-fluid
                img.fragment(src="assets/images/classification/example-data-with-model.png", style={height: "200px"}).img-fluid

