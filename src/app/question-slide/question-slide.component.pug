ng-template('#slides')
    section
        slide-with-header(header="Questions")
            img(src="assets/images/questions.png").img-fluid
    section(*ngIf="questions.length > 0")
        slide-with-header(header="Questions")
            ol.questions
                li.fragment.fade-in(*ngFor="let question of questions") {{question.question}}
            aside.notes
                div(*ngFor="let question of questions") {{question.answer}}
